<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <title>Survey Form</title>
    <style>


        .container {
            margin-top: 25px;
            text-align: center;
        }

        h1 {
            background: lightblue;
            border-top: 2px solid black;
            border-bottom: 2px solid black;
            text-align: center;
            padding: 10px 0 10px 0px;
        }

        .people{
            margin-top: 25px;
        }
    </style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    //people info
    $(document).ready(function(){
    $('#peopleBtn').click(function(){
    // let's make the request to our OWN server!
    $.get('/people', function(data){
    // log the data to be sure we have it before we dive into manipulating the DOM

    console.log("got the data", data);
    $('.people').empty();
        for (let i in data.results) {
            $('.people').append(data.results[i].name + '<br>');
        }
    }, 'json');

    });
    });
    //planet info
    $(document).ready(function () {
            $('#planetBtn').click(function () {
                // let's make the request to our OWN server!
                $.get('/planet', function (data) {
                    // log the data to be sure we have it before we dive into manipulating the DOM

                    console.log("got the data", data);
                    $('.planet').empty();
                    for (let i in data.results) {
                        $('.planet').append(data.results[i].name + '<br>');
                    }
                }, 'json');

            });
        });
</script>
</head>

<body>
    <div><H1>Star Wars Wiki</H1></div>
    <div class="container">
        <h2>What would you like to know more about?</h2>
<button class="btn btn-primary" id="peopleBtn">People</button>
<button class="btn btn-primary" id="planetBtn">Planet</button>
<div class="people"></div>
<div class="planet"></div>
    </div>
</body>

</html>